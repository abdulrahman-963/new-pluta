<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="018-create-widgets-sequence" author="kilani">
        <comment>Create sequence for camera table</comment>

        <createSequence
                sequenceName="widget_seq"
                startValue="1"
                incrementBy="1"/>

        <rollback>
            <dropSequence sequenceName="widget_seq"/>
        </rollback>
    </changeSet>

    <changeSet id="003-create-widgets-table" author="dashboard-team">
        <comment>Create widgets table with JSONB support and foreign key to dashboards</comment>

        <createTable tableName="widget">

            <!-- Primary Key -->
            <column name="id" type="bigint" >
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_widget"/>
            </column>

            <!-- Foreign Key to Dashboard -->
            <column name="widget_group_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="query_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>

            <column name="hql_query" type="CLOB">
                <constraints nullable="true"/>
            </column>

            <!-- Audit Columns (from BaseEntity) -->
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>

            <column name="updated_by" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>

        </createTable>

        <rollback>
            <dropTable tableName="widget"/>
        </rollback>
    </changeSet>

    <changeSet id="003-add-widgets-foreign-key" author="dashboard-team">
        <comment>Add foreign key constraint from widgets to dashboards with cascade delete</comment>

        <addForeignKeyConstraint
                baseTableName="widget"
                baseColumnNames="widget_group_id"
                constraintName="fk_widgets_widget_group"
                referencedTableName="widget_group"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="RESTRICT"/>


        <rollback>
            <dropForeignKeyConstraint
                    baseTableName="widget"
                    constraintName="fk_widget_tenant"/>
        </rollback>
    </changeSet>

    <changeSet id="004-add-widget-indexes" author="kilani">
        <comment>Add indexes on table for widget for performance optimization</comment>


        <createIndex indexName="idx_widget_query_name" tableName="widget">
            <column name="query_name"/>
        </createIndex>


        <createIndex indexName="idx_widget_group_id" tableName="widget">
            <column name="widget_group_id"/>
        </createIndex>

        <rollback>
            <dropIndex indexName="idx_widget_query_name" tableName="widget"/>
            <dropIndex indexName="idx_widget_group_id" tableName="widget"/>
        </rollback>
    </changeSet>

    <changeSet id="003-add-widget-constraints" author="kilani">
        <comment>Add unique constraints on widget table</comment>

        <addUniqueConstraint
                tableName="widget"
                columnNames="query_name"
                constraintName="uk_widget_query_name"/>
        <rollback>
            <dropUniqueConstraint
                    tableName="tenant"
                    constraintName="uk_widget_query_name"/>
        </rollback>
    </changeSet>





</databaseChangeLog>